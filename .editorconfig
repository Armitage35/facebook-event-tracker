# editorconfig.org
root = true

[*]
indent_style = tab
editor.tabSize = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true


[*.md]
trim_trailing_whitespace = false
indent_style = spaces
insert_final_newline = true
editor.tabSize = 2

[*.yml]
indent_style = spaces
indent_size = 2
